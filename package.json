{
  "name": "todo-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Minimal REST backend for tasks according to the tech spec (ESM)",
  "scripts": {
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"node --loader ts-node/esm src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.3.1",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0"
  }
}
